<div class="container">
  <h1>My events</h1>
  <% @events.each do |event| %>
      <div class="events-card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <%= link_to event_path(event) do %>
              <%= cl_image_tag event.pictures.key, class:"img-fluid rounded-start" %>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text mb-0"><small class="text-muted">Pick up: <%= event.date %></small></p>
              <div class="d-flex justify-content-between">         
                <%= link_to "Delete event", event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-je ml-5 justify-content-end" %>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>

