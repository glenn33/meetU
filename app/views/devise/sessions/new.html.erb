<div class="d-flex align-items-center flex-column">
  <div class="event-form" id="signin-form"> 
     <h2 class="event-title" id="signin-title">Sign in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do  %>
        <div class="google-btn  btn btn-primary mt-3">
        <%= image_tag "https://e7.pngegg.com/pngimages/337/722/png-clipart-google-search-google-account-google-s-google-play-google-company-text.png" %>
          <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, class:"text"  %>
        </div>
      <% end %>
      <div class="form-actions text-center mb-5">
          <%= f.button :submit, "Log in", class: "btn btn-flat mt-2" %>
        </div>
      <%= render "devise/shared/links" %>
      <% end %>
  </div>
</div>
