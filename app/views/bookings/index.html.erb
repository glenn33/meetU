<div class="container mt-3">
  <h1>Bookings</h1>
    <div class="bookings-container">
    <% @bookings.each do |booking| %>
      <div class="booking-card">
        <div class="card-header">
          <%= link_to event_path(booking.event) do  %>
            <% if booking.event.pictures.attached? %>
              <%= cl_image_tag booking.event.pictures[0].key %>
            <% else %>
              <img src=<%= booking.event.category.picture  %>/> 
            <% end %>
          <% end %>
        </div>
        <div class="card-body">
          <span class="tag mb-2"><%= booking.event.category.name %></span>
          <%= link_to event_path(booking.event) do %>
            <h4 class="card-title"><%= booking.event.title %></h4>
          <% end %>
          <div class="d-flex justify-content-center mb-3">
            <i class="fas fa-map-marker-alt mr-1 mt-1"></i>
            <a href="https://maps.google.com/?q=<%= booking.event.address %>" target="_blank" class="direction-style"><%= booking.event.address.truncate(27) %></a>
          </div>
          <p class="mb-0"><i class="far fa-calendar-check"></i> <%= booking.event.date.strftime("%A, %d %b %Y") %></p>
          <p><i class="far fa-clock"></i> <%= booking.event.date.strftime("%l:%M %p") %></p>
          <%= link_to "I'm not going anymore", booking_path(booking), method: :delete, class:"btn btn-je", data: { confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div style="height: 300px;"></div>
